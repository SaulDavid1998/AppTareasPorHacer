@model Tarea

<h2>Agregar Tarea</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Agregar" method="post">
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>    

    <div class="mb-3">
        <label asp-for="CategoriaFK" class="form-label">Categoria</label>
        <select class="form-select" asp-for="CategoriaFK">
            @foreach (Categoria registro in ViewBag.Categorias)
                    {
                        <option value="@registro.CategoriaId">@registro.CategoriaNombre</option>
                    }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="FechaTarea" class="form-label">Fecha</label>
        <input asp-for="FechaTarea" class="form-control" type="text"  />
    </div>

    <div class="mb-3">
        <label asp-for="EstadoFK" class="form-label">Estado</label>
        <select class="form-select" asp-for="EstadoFK">
            @foreach (Estado registro in ViewBag.Estados)
            {
                <option value="@registro.EstadoId">@registro.EstadoNombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Agregar</button>
    <a class="btn btn-primary" asp-action="Index">Cancelar</a>
</form>
